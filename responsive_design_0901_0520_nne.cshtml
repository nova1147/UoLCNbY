// ASP.NET Core MVC View with Responsive Layout Design
@{
    // Declare any necessary variables or fields
}

// Begin the HTML structure with proper DOCTYPE and responsive meta tag
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Design Example</title>
    <link rel="stylesheet" href="~/css/style.css" />
    @* Additional head elements can be included here *@
</head>
<body>
    <header>
        <nav>
            @* Navigation bar that adapts to different screen sizes *@
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <article>
                @* Article content that will adapt to different screen sizes *@
                <h1>Welcome to Our Website</h1>
                <p>This is a responsive design example using ASP.NET Core MVC.</p>
            </article>
        </section>
    </main>
    <footer>
        @* Footer section that adapts to different screen sizes *@
        <p>&copy; 2023 Responsive Design Example. All rights reserved.</p>
    </footer>
    <script src="~/js/script.js"></script>
    @* Additional scripts can be included here *@
</body>
</html>
